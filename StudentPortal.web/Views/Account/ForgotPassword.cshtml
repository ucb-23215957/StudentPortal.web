@model StudentPortal.web.Models.ForgotPasswordViewModel
<meta name="viewport" content="width=device-width, initial-scale=1.0">


@{
    ViewData["Title"] = "Forgot Password";
}

<div class="card-body8 border bg-secondary position-static">
    <h1 class="menu10">Under Construction Go back to log in</h1>

    <div class="card-body9 border">
        <div class="card-body10 border align-items-center">
            <form asp-action="ForgotPassword" method="post">
                <div>
                    <label class="label6 text-white" for="Email">Email:</label>
                    <input type="text" id="Email" name="Email" class="form-control input6" placeholder="Enter your Email" required disabled />
                </div>
                <div class="form-group">
                    <label class="label7 text-white" for="NewPassword">New Password:</label>
                    <input type="password" id="NewPassword" name="NewPassword" class="form-control input7" placeholder="Enter your new password" required disabled />
                </div>
                <div class="form-group ">
                    <label class="label7 text-white" for="ConfirmPassword">Confirm Password:</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control input7" placeholder="Confirm your password" required disabled />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <button type="button" class="button9 text-center form-control" onclick="window.location.href='@Url.Action("Login", "Account")'">Log In</button>
                </div>

                <!-- Display validation errors here -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }
            </form>
        </div>
    </div>
</div>
