@model StudentPortal.web.Models.SubjectEntryViewModel
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="student-registration-form1 i2">
    <div class="student-form-card1 shadow">
        <div class="student-form-header1 bg-primary text-white py-3">
            <h1 class="text-center mb-0">
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
                <i class="bi bi-person-plus-fill me-2"></i>SUBJECT ENTRY
            </h1>
        </div>
        <div class="student-form-body p-4 bg1">
            <form method="post" asp-action="SubjectEntry" asp-controller="Student">
                <div class="row g-4">
                    <!-- Name Fields -->
                    <div class="form-floating col-md-4">
                        <i class="bi bi-book-fill student-form-icon1"></i>
                        <input asp-for="Subject" class="student-form-input1 form-control" placeholder="Subject" />
                        <label asp-for="Subject" class="student-form-label1">Subject</label>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-4">
                        <i class="bi bi-person-fill student-form-icon2"></i>
                        <input asp-for="Description" class="student-form-input2 form-control" placeholder="Description" />
                        <label asp-for="Description" class="student-form-label2">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-4">
                        <i class="bi bi-book-fill student-form-icon3"></i>
                        <input asp-for="Units" class="student-form-input3 form-control" placeholder="Units" />
                        <label asp-for="Units" class="student-form-label3 label12">Units</label>
                        <span asp-validation-for="Units" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <select asp-for="Offering" class="student-form-input4 form-select">
                            <option value="Offering"></option>
                            <option value="1st Sem">1st Sem</option>
                            <option value="2nd Sem">2nd Sem</option>
                            <option value="Summer">Summer</option>
                        </select>
                        <label asp-for="Offering" class="student-form-label4">Offering</label>
                        <span asp-validation-for="Offering" class="text-danger"></span>
                    </div>


                    <div class="form-floating col-md-6">
                        <label asp-for="Category" class="student-form-label5">Category</label>
                        <select asp-for="Category" class="student-form-input5 form-select">
                            <option value="Category"></option>
                            <option value="LEC">LEC </option>
                            <option value="LAB">LAB </option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6 ">
                        <input asp-for="CourseCode" class="student-form-input6 form-control" placeholder="CourseCode" />
                        <label asp-for="CourseCode" class="student-form-label6">CourseCode</label>
                        <span asp-validation-for="CourseCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <select asp-for="CurriculumYear" class="student-form-input7 form-select">
                            <option value="CurriculumYear"></option>
                            <option value="SY 2021-2022">SY 2021-2022</option>
                            <option value="SY 2022-2023">SY 2022-2023</option>
                            <option value="SY 2023-2024">SY 2023-2024</option>
                            <option value="Sy 2024-2025">SY 2024-2025</option>

                        </select>
                        <label asp-for="CurriculumYear" class="student-form-label7">CurriculumYear</label>
                        <span asp-validation-for="CurriculumYear" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6 pos1">
                        <input asp-for="SubjectCode" class="student-form-input8 form-control" placeholder="SubjectCode" />
                        <label asp-for="SubjectCode" class="student-form-label8">SubjectCode</label>
                        <span asp-validation-for="SubjectCode" class="text-danger"></span>
                    </div>
                    <div class="checkbox-group">
                        <!-- Prerequisite Checkbox -->
                        <div class="form-check">
                            <input type="checkbox" id="PrerequisiteCheckbox" class="form-check-input" onchange="setRequisiteValue()" />
                            <label class="form-check-label" for="PrerequisiteCheckbox">Prerequisite</label>
                        </div>

                        <!-- Corequisite Checkbox -->
                        <div class="form-check">
                            <input type="checkbox" id="CorequisiteCheckbox" class="form-check-input" onchange="setRequisiteValue()" />
                            <label class="form-check-label" for="CorequisiteCheckbox">Corequisite</label>
                        </div>
                        <input type="hidden" asp-for="PreCorReq" id="PreCorReq" />

                    </div>


                    <div class="col-md-6">
                        <button type="submit" class="student-form-button1 student-form-button-success w-100 py-3">
                            <i class="bi bi-check-circle-fill me-2"></i>Create
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Student" asp-action="Menu" class="student-form-button1 student-form-button-danger w-100 py-3">
                            <i class="bi bi-x-circle-fill me-2"></i>Cancel
                        </a>
                    </div>
                    <div class="col-md-7">
                        <a asp-controller="Student" asp-action="SubjectEntryTable" class="student-form-button5 py-3">
                            <i class="bi bi-check-circle-fill me-2"></i>VIEW TABLE
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setRequisiteValue() {
        const preCheckbox = document.getElementById("PrerequisiteCheckbox");
        const coCheckbox = document.getElementById("CorequisiteCheckbox");
        const preCorReqField = document.getElementById("PreCorReq");

        let value = [];

        if (preCheckbox.checked) {
            value.push('PR');
        }

        if (coCheckbox.checked) {
            value.push('CO');
        }

        preCorReqField.value = value.join(', ');
    }

</script>